{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Banano Endpoint Artifact",
  "type": "object",
  "required": ["banano_rpc_endpoint"],
  "additionalProperties": false,
  "properties": {
    "banano_rpc_endpoint": {
      "type": "string",
      "pattern": "^[a-z0-9](?:[a-z0-9-]*[a-z0-9])?(?:\\.[a-z0-9](?:[a-z0-9-]*[a-z0-9])?)*:[0-9]+$",
      "description": "Host:port of the externally reachable Banano RPC endpoint"
    }
  }
}
